	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"const loginRequest = {",
					"  url: 'http://localhost:8061/jwtauth/authenticate',",
					"  method: 'POST',",
					"  header: {",
					"    'Content-Type': 'application/json'",
					"  },",
					"  body: {",
					"    mode: 'raw',",
					"    raw: JSON.stringify({",
					"      // Pulling from environment variables",
					"      \"username\": pm.environment.get(\"username\"), ",
					"      \"password\": pm.environment.get(\"password\")",
					"    })",
					"  }",
					"};",
					"",
					"// Send the request before the main call starts",
					"pm.sendRequest(loginRequest, (error, response) => {",
					"    if (error) {",
					"        console.error(\"Login failed:\", error);",
					"    } else {",
					"        try {",
					"            const jsonData = response.json();",
					"            const token = jsonData.jwt;",
					"            ",
					"            if (token) {",
					"                pm.environment.set(\"JWT_TOKEN\", token);",
					"                console.log(\"Pre-request login successful for user: \" + pm.environment.get(\"DB_USERNAME\"));",
					"            } else {",
					"                console.error(\"Login response did not contain a JWT.\");",
					"            }",
					"        } catch (e) {",
					"            console.error(\"Could not parse login response:\", e);",
					"        }",
					"    }",
					"});"
				]
			}
		},
